{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2022",
    "lib": ["es2020", "dom"],
    "jsx": "react-jsx",
    "moduleResolution": "Bundler",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "baseUrl": "./",
    "allowSyntheticDefaultImports": true,
    "noErrorTruncation": false,
    "allowJs": true
  },
  "exclude": ["dist", "build", "node_modules"]
}
