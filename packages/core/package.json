{
  "name": "@polkadot-sufficient-assets/core",
  "version": "0.0.1",
  "description": "library core",
  "private": true,
  "sideEffects": false,
  "files": ["src", "dist"],
  "types": "dist/index.d.ts",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "module": "./dist/index.mjs",
      "import": "./dist/index.mjs",
      "default": "./dist/index.js"
    },
    "./smoldot": {
      "types": "./dist/smoldot/index.d.ts",
      "module": "./dist/smoldot/index.mjs",
      "import": "./dist/smoldot/index.mjs",
      "default": "./dist/smoldot/index.js"
    },
    "./smoldot/*": {
      "types": "./dist/smoldot/*/index.d.ts",
      "module": "./dist/smoldot/*/index.mjs",
      "import": "./dist/smoldot/*/index.mjs",
      "default": "./dist/smoldot/*/index.js"
    },
    "./chain-specs/*": {
      "types": "./dist/chain-specs/*/index.d.ts",
      "module": "./dist/chain-specs/*/index.mjs",
      "import": "./dist/chain-specs/*/index.mjs",
      "default": "./dist/chain-specs/*/index.js"
    }
  },
  "scripts": {
    "dev": "tsup --watch",
    "build:prepare": "papi --whitelist papi-whitelist.ts && tsup",
    "build:package": "tsup",
    "papi:update": "papi update polkadot,kusama,rococo,westend,paseo,kah,pah,wah,rah,paseoah",
    "clean": "rimraf ./dist && rimraf ./node_modules",
    "clean:papi": "rimraf ./.papi/descriptors/dist",
    "lint": "biome lint .",
    "lint:fix": "biome lint . --write",
    "format": "biome format . ",
    "format:fix": "biome format .  --write",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:cov": "vitest --coverage",
    "papi:generate": "papi"
  },
  "dependencies": {
    "@polkadot-api/descriptors": "file:.papi/descriptors",
    "@polkadot-api/known-chains": "^0.5.5",
    "@polkadot-api/smoldot": "^0.3.3",
    "polkadot-api": "^1.6.4",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@polkadot-sufficient-assets/tsconfig": "workspace:*",
    "@vitest/coverage-v8": "^2.1.2",
    "typescript": "^5.6.2",
    "vitest": "^2.1.2"
  }
}
